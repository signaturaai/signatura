# =============================================================================
# SIGNATURA ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (for server-side operations only - KEEP SECRET)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# OpenAI Configuration (for AI Companion)
# Get this from: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model to use for companion interactions
OPENAI_MODEL=gpt-4-turbo-preview

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Signatura

# -----------------------------------------------------------------------------
# Optional: Analytics & Monitoring
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=

# -----------------------------------------------------------------------------
# Optional: Email (for notifications)
# -----------------------------------------------------------------------------
# RESEND_API_KEY=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to 'true' to enable verbose logging
DEBUG_MODE=false

# Set to 'true' to use mock AI responses (saves API costs during development)
USE_MOCK_AI=false
